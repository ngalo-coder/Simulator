# Database Configuration
MONGODB_URI=mongodb://localhost:27017/medical-simulator
DB_NAME=medical-simulator
PORT=5001
NODE_ENV=development

# Authentication
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=24h

# AI Services
OPENAI_API_KEY=your-openai-api-key
OPENROUTER_API_KEY=your-openrouter-api-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Service Configuration
EMAIL_NOTIFICATIONS_ENABLED=true
FROM_EMAIL=noreply@medicalsimulator.com
ADMIN_EMAIL=admin@medicalsimulator.com
FRONTEND_URL=http://localhost:5173

# SMTP Configuration (for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=

# Logging
LOG_LEVEL=info